<Window x:Class="AssignmentCalculator.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssignmentCalculator"
        mc:Ignorable="d"
        Title="HelpWindow" 
        Height="450" 
        Width="800"
        Background="Bisque">
    <Grid>
        <StackPanel>
            <TextBlock
            Text="This isn't rocket science... "
            HorizontalAlignment="Center"
            Margin="20"
            FontFamily="Arial"
            FontSize="16"/>
            <TextBlock
            Text="Enter numeric values into their corresponding box and click calculate to receive your results."
            HorizontalAlignment="Center"
            Margin="20"
            FontFamily="Arial"
            FontSize="16"/>
            <Button
            x:Name="Button_Close"
            Width="100"
            Height="30"
            Content="Close"
            Click="Button_Close_Click"/>
        </StackPanel>

    </Grid>
</Window>
